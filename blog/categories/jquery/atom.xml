</span><span class='line'>        <span class="nx">connectWith</span><span class="o">:</span> <span class="s2">&quot;#column1,#column2,#column3&quot;</span><span class="p">,</span>
</span><span class='line'>        <span class="nx">handle</span><span class="o">:</span> <span class="s1">&#39;.WidgetHeader&#39;</span><span class="p">,</span> <span class="nx">opacity</span><span class="o">:</span> <span class="mf">0.6</span>
